---
import Button from "@/components/atoms/Button.astro";

export interface Props {
  ctaText: string;
  qrCodeSrc: string;
  voteButtonLink: string;
}

const { ctaText, qrCodeSrc, voteButtonLink } = Astro.props;
---

<section class="cast-your-vote-section section">
  <div class="container glass-container">
    <h2 class="text-4xl font-bold text-center">{ctaText}</h2>
    <div class="content-wrapper">
      <div class="qr-code-wrapper">
        <img src={qrCodeSrc} alt="QR Code for Voting" class="qr-code" />
        <p class="text-md text-muted">Scan Me!</p>
      </div>
      <div class="vote-button-wrapper">
        <Button href={voteButtonLink} variant="outline" size="xl">
          Vote Now
        </Button>
      </div>
    </div>
  </div>
</section>

<style>
  .cast-your-vote-section {
    text-align: center;
    padding: var(--space-4xl) 0;
  }

  .glass-container {
    background: var(--glass-bg);
    backdrop-filter: var(--glass-medium);
    border: 1px solid var(--glass-border);
    box-shadow: var(--shadow-xl);
    border-radius: var(--radius-2xl);
    padding: var(--space-4xl);
    max-width: 900px; /* Adjust as needed */
    margin: 0 auto;
  }

  .glass-container h2 {
    margin-bottom: var(--space-5xl);
  }

  .content-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-3xl); /* Gap for mobile */
  }

  @media (min-width: 768px) {
    .content-wrapper {
      flex-direction: row;
      justify-content: space-between;
      gap: var(--space-1xl); /* Larger gap for desktop */
    }
  }

  .qr-code-wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-md);
  }

  .qr-code {
    width: 180px;
    height: 180px;
    border-radius: var(--radius-lg);
    object-fit: cover;
  }

  .vote-button-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>
