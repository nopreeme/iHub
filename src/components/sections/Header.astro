---
const navLinks = [
  { href: "/about", text: "About" },
  { href: "/projects", text: "Projects" },
  { href: "/interns", text: "Interns" },
  { href: "/contact", text: "Contact" },
];
---

<header class="header glass-medium">
  <div class="container flex items-center justify-between">
    <a href="/iHub" class="logo">
      <img src="/favicon.svg" alt="iHub Logo" class="logo-icon" />
      <span class="logo-text">iHub</span>
    </a>
    <nav class="nav">
      <ul class="nav-list">
        {
          navLinks.map((link) => (
            <li>
              <a href={link.href} class="nav-link">
                {link.text}
              </a>
            </li>
          ))
        }
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    z-index: 50;
    padding: var(--space-md) 0;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    text-decoration: none;
    color: var(--color-text-primary);
    font-size: var(--text-lg);
    font-weight: var(--font-weight-bold);
  }

  .logo-icon {
    width: 1.5em;
    height: 1.5em;
    color: var(--color-brand-primary);
  }

  .nav-list {
    display: flex;
    gap: var(--space-lg);
    list-style: none;
    padding-left: var(--space-xl);
  }

  .nav-link {
    text-decoration: none;
    color: var(--color-text-secondary);
    font-weight: var(--font-weight-medium);
    transition: color 0.2s ease;
  }

  .nav-link:hover {
    color: var(--color-text-primary);
  }
</style>
